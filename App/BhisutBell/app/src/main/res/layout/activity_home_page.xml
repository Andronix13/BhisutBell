        <!--android:hint="Search"-->
        <!--android:textColorLink="@color/colorTitle"-->
        <!--android:textColorHint="@color/colorTextUpdate"-->
        <!--android:textColorHighlight="@color/colorTitle"-->
        <!--android:inputType="textAutoComplete|textAutoCorrect"-->
        <!--android:textColor="@color/colorTitle"-->
        <!--android:popupBackground="@drawable/background_blur"-->
        <!--android:layout_below="@+id/toolbar_top">-->

        <!--&lt;!&ndash;<requestFocus />&ndash;&gt;-->
    <!--</AutoCompleteTextView>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_info"
        android:textAlignment="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textSize="12sp"
        android:textColor="@color/colorTextUpdate"
        android:text="You'll receive notifications whenever the college website receives a new notification!"
        android:layout_below="@+id/search_bar" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView_notifications"
        android:layout_below="@+id/textView_info"
        android:layout_marginTop="10dp"/>



</RelativeLayout>
